+	/*
+	 * set i_size to zero to disable loop device mount
+	 */
+	SNAPSHOT_SET_DISABLED(inode);
+	ei->i_flags &= ~EXT4_SNAPFILE_ENABLED_FL;
+
+	/* invalidate page cache */
+	truncate_inode_pages(&inode->i_data, SNAPSHOT_BYTES_OFFSET);
